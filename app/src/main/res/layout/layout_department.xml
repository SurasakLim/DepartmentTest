<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDepartment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ivDepartment"
        app:layout_constraintTop_toTopOf="@+id/ivDepartment"
        tools:text="NAME" />

    <View
        android:id="@+id/vSelected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_outline_corner_8dp"
        app:layout_constraintBottom_toBottomOf="@id/ivDepartment"
        app:layout_constraintEnd_toEndOf="@id/ivDepartment"
        app:layout_constraintStart_toStartOf="@id/ivDepartment"
        app:layout_constraintTop_toTopOf="@id/ivDepartment" />
</androidx.constraintlayout.widget.ConstraintLayout>
